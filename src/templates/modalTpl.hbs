{{#each this}}
<div class="lightbox">
    <div class="modal">
        <button class="btn_close">
            <svg class="icon-close">
                <use href="../images/sprite.svg#icon-close"></use>
            </svg>
        </button>
        <img class="modalEvent__image--round" src="{{imgUrl}}" alt="{{imgAlt}}" />
        <div class="modalEvent__content">
            <img class="modalEvent__image--cube" src="{{imgUrl}}" alt="{{imgAlt}}" />
            <div class="modalEvent__info">
                <h3 class="info__name">INFO</h3>
                <p class="modalEvent__info">{{info}}</p>

                <h3 class="info__name">WHEN</h3>
                <p class="modalEvent__date">{{date}}</p>
                <p class="modalEvent__time">{{time}}</p>
                <p class="modalEvent__city">{{city}}</p>
                <p class="modalEvent__country">{{country}}</p>

                <h3 class="info__name">WHERE</h3>
                <p class="modalEvent__city">{{city}}</p>
                <p class="modalEvent__country">{{country}}</p>
                <p class="modalEvent__place">{{venue}}</p>

                <h3 class="info__name">WHO</h3>
                {{#each this}}
                <p class="modalEvent__artist">{{attractions}}</p>
                {{/each}}
                <h3 class="info__name">PRICES</h3>
                {{#each this}}
                <p class="modalEvent__{{price.type}}">
                    <svg class="modalEvent__icon" aria-label="Barcode icon">
                        <use class="icon-nav" href="../images/sprite.svg#icon-code"></use>
                    </svg>
                     {{price.type}} {{price.min}}-{{price.max}} {{price.currency}}
                </p>
                {{!-- <a href="{{link}}" class="buyTickets__button">BUY TICKETS</a> --}}
                {{/each}}
            </div>
        </div>
        <a href="{{moreFromThisAuthor}}" class="moreInfo__button">MORE FROM THIS AUTHOR</a>
    </div>
</div>
{{/each}}

